{
  "extends": ["react-app", "standard"],
  "root": true,
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn"],
    "no-var": ["error"]
  },
  "overrides": [
    {
      "files": ["**/*.ts?(x)"],
      "rules": {
        "semi": "error"
      }
    }
  ]
}
